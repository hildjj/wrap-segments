{
  "name": "wrap-segments",
  "version": "0.0.0",
  "description": "Wrap text on Unicode word boundaries",
  "main": "lib/index.js",
  "type": "module",
  "scripts": {
    "pretest": "npm run ts",
    "test": "c8 ava",
    "ts": "tsc",
    "ts:debug": "tsc --inlineSourceMap",
    "precoverage": "npm run ts:debug",
    "coverage": "c8 ava",
    "lint": "eslint . --ext js,ts",
    "doc": "typedoc src/index.ts",
    "build": "npm run ts && npm run lint && npm run doc"
  },
  "keywords": [
    "wordwrap",
    "word",
    "wrap",
    "unicode",
    "zalgo",
    "segmenter",
    "grapheme"
  ],
  "author": "Joe Hildebrand <joe-github@cursive.net>",
  "license": "MIT",
  "repository": "hildjj/wrap-segments",
  "devDependencies": {
    "@cto.af/eslint-config": "1.1.0",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "ava": "5.2.0",
    "c8": "7.13.0",
    "eslint": "8.40.0",
    "typedoc": "0.24.7",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=16"
  }
}
